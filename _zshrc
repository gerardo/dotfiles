# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.zsh

export ZSH_THEME="pure"

DISABLE_AUTO_UPDATE="true"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

unamestr=`uname`

# PATH
export PATH=$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/X11/bin:/usr/games

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
plugins=(
    aws httpie osx gpg-agent ssh-agent
    git git-extras github
    tmux fasd dirhistory extract alias-tips
    history-substring-search zsh-autosuggestions
    python pip virtualenvwrapper sbt scala
    docker docker-compose
)

if [[ "$unamestr" == 'Linux' ]]; then
    plugins=(
      debian
    )
elif [[ "$unamestr" == 'Darwin' ]]; then
    plugins+=(
        brew
      )
fi

source $ZSH/oh-my-zsh.sh

# Fix for .. completion
zstyle ':completion:*' special-dirs true

# your project folder that we can `c [tab]` to
export PROJECTS=$HOME/Code

# Virtualenvwrapper + Pip goodness
export WORKON_HOME=~/bin/Envs
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export PIP_RESPECT_VIRTUALENV=true

alias tmux="TERM=screen-256color-bce tmux"

export PATH="$HOME/.bin:$PATH"
eval "$(rbenv init - zsh --no-rehash)"

# use .localrc for settings specific to one system
[[ -f $HOME/.zshrc.local ]] && . $HOME/.zshrc.local

source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
