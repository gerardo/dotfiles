# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.zsh

export ZSH_THEME=""

DISABLE_AUTO_UPDATE="true"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

unamestr=`uname`

# PATH
export PATH=$HOME/bin:/usr/local/bin:/usr/local/anaconda3/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/X11/bin:/usr/games
fpath=( "$ZSH/custom/themes/pure" $fpath )

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
plugins=(
    z dirhistory history-substring-search zsh-autosuggestions alias-tips
    git git-extras github
    python pip
    sbt scala
    aws httpie
    docker docker-compose
    ssh-agent
)

if [[ "$unamestr" == 'Linux' ]]; then
    plugins=(
      debian
    )
elif [[ "$unamestr" == 'Darwin' ]]; then
    plugins+=(
        brew
        osx
      )
fi

source $ZSH/oh-my-zsh.sh

autoload -U promptinit; promptinit
prompt pure

# Fix for .. completion
zstyle ':completion:*' special-dirs true

# Aliases
proj() {
    cd $(find ~/Code -maxdepth 2 -type d | fzy)
}

# RBEnv
export PATH="$HOME/.bin:$PATH"
eval "$(rbenv init - zsh --no-rehash)"

# Other plugins
source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source ~/.zsh/custom/plugins/enhancd/init.sh

# use .localrc for settings specific to one system
[[ -f $HOME/.zshrc.local ]] && . $HOME/.zshrc.local
