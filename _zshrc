# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.zsh

unamestr=`uname`

# your project folder that we can `c [tab]` to
export PROJECTS=$HOME/Code

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
export ZSH_THEME="agnoster"

export DISABLE_AUTO_UPDATE="true"

# PATH
export PATH=$HOME/bin:/usr/local/bin:/usr/local/share/python:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/X11/bin:/usr/games

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Example format: plugins=(rails git textmate ruby lighthouse)

if [[ "$unamestr" == 'Linux' ]]; then
    plugins=(git pip debian django vagrant autojump heroku python bower coffee fabric)
    source /etc/bash_completion.d/virtualenvwrapper
elif [[ "$unamestr" == 'Darwin' ]]; then
    plugins=(git pip brew django vagrant autojump heroku python bower coffee fabric)
    source /usr/local/share/python/virtualenvwrapper.sh
    source "`brew --prefix grc`/etc/grc.bashrc"

    # Autojump
    if [ -f `brew --prefix`/etc/autojump ]; then
      . `brew --prefix`/etc/autojump
    fi
fi

source $ZSH/oh-my-zsh.sh

# Fix for .. completion
zstyle ':completion:*' special-dirs true

# Required by virtualenvwrapper
export WORKON_HOME=~/bin/Envs

# Virtualenvwrapper + Pip goodness
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export PIP_RESPECT_VIRTUALENV=true

alias tmux="TERM=screen-256color-bce tmux"

# use .localrc for settings specific to one system
[[ -f $HOME/.localrc ]] && . $HOME/.localrc
