# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.zsh

export ZSH_THEME=""

DISABLE_AUTO_UPDATE="true"
COMPLETION_WAITING_DOTS="true"
DISABLE_UNTRACKED_FILES_DIRTY="true"

unamestr=`uname`

# PATH
export PATH=$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/X11/bin:/usr/games
fpath=( "$ZSH/custom/themes/pure" $fpath )

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
plugins=(
    z dirhistory alias-tips history-substring-search zsh-autosuggestions
    git git-extras github aws httpie
    python pip virtualenvwrapper sbt scala docker docker-compose
    osx ssh-agent
)

if [[ "$unamestr" == 'Linux' ]]; then
    plugins=(
      debian
    )
elif [[ "$unamestr" == 'Darwin' ]]; then
    plugins+=(
        brew
      )
fi

source $ZSH/oh-my-zsh.sh

autoload -U promptinit; promptinit
prompt pure

# Fix for .. completion
zstyle ':completion:*' special-dirs true

# your project folder that we can `c [tab]` to
export PROJECTS=$HOME/Code

# Virtualenvwrapper + Pip goodness
export WORKON_HOME=~/bin/Envs
export PIP_VIRTUALENV_BASE=$WORKON_HOME
export PIP_RESPECT_VIRTUALENV=true

export PATH="$HOME/.bin:$PATH"
eval "$(rbenv init - zsh --no-rehash)"

# use .localrc for settings specific to one system
[[ -f $HOME/.zshrc.local ]] && . $HOME/.zshrc.local

proj() {
    cd $(find ~/Code -maxdepth 2 -type d | fzy)
}

source /usr/local/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source ~/.zsh/custom/plugins/enhancd/init.sh
