[core]
        editor = vim -f
	excludesfile = ~/.gitignore_global
        quotepath = false
        autocrlf = input
	pager = diff-so-fancy | less --tabs=4 -RFX
[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix
[color]
        ui = auto
[help]
        autocorrect = 1
[merge]
        log = true
[branch "master"]
    remote = origin
    merge = refs/heads/master
